<section>
	<div class="fl w-100 pa2">
		<% @contacts.each do |contact| %>
			<article class="center mw5 mw6-ns hidden ba mv4">
				<h1 class="f4 bg-near-black white mv0 pv2 ph3"><%= link_to contact.name, contact_path(contact) %></h1>
				<div class="pa3 bt">
				  <p class="f6 f5-ns lh-copy measure mv0">
				    <%= contact.email %>
				    <%= contact.phone %>
				    <%= contact.address %>	
				  </p>
				  <p> <%= link_to 'Edit', edit_contact_path(contact) %> | <%= link_to 'Delete', contact_path(contact), :method => :delete, data: {confirm: "Are you sure?"} %></p>
				</div>
			</article>
		<% end %>
	</div>
</section>

<%= will_paginate @contacts, class: "tc" %>
